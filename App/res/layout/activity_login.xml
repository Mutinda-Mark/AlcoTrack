<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login"
        android:id="@+id/Loginpg"
        android:background="@color/white">

    <TextView
            android:text="Alcho-Track"
            android:layout_width="195dp"
            android:layout_height="46dp"
            android:id="@+id/LoginTitletxt"
            android:textColor="#0B0B0B"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="108dp"
            android:layout_marginEnd="108dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="108dp"
            app:layout_constraintBottom_toTopOf="@+id/loginEmailLbl"/>

    <TextView
            android:text="email/ID"
            android:layout_width="101dp"
            android:layout_height="23dp"
            android:id="@+id/loginEmailLbl"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="286dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/loginEmail"
            android:textColor="@color/black" app:layout_constraintHorizontal_bias="0.562"/>
    <EditText
            android:layout_width="367dp"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/loginEmail"
            android:labelFor="@id/LoginPassLbl"
            android:cursorVisible="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="sans-serif-medium"
            android:hapticFeedbackEnabled="false"
            android:allowUndo="true"

            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/LoginPassLbl"
            android:textColor="#302E2E"
            android:hint="user@gmail.com" app:layout_constraintHorizontal_bias="0.666" android:autofillHints=""
            style="@style/EditTextBorder" android:paddingLeft="4dp"/>

    <EditText
            android:layout_width="367dp"
            android:layout_height="48dp"
            android:inputType="textPassword|textWebPassword"
            android:ems="10"
            android:id="@+id/LoginPass"
            android:labelFor="@id/LoginPassLbl"
            android:cursorVisible="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="sans-serif-medium"
            android:hapticFeedbackEnabled="false"
            android:allowUndo="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/Loginbtn"
            android:textColor="#302E2E"
            android:hint="password" app:layout_constraintHorizontal_bias="0.666" android:autofillHints=""
            style="@style/EditTextBorder" android:paddingLeft="4dp"/>
    <TextView
            android:text="password"
            android:layout_width="101dp"
            android:layout_height="23dp"
            android:id="@+id/LoginPassLbl"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp"
            app:layout_constraintBottom_toTopOf="@+id/LoginPass"
            android:layout_marginEnd="288dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"/>

    <Button
            android:text="Login"
            android:layout_width="365dp"
            android:layout_height="48dp"
            android:id="@+id/Loginbtn"
            android:background="#202F85"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/LoginFPass" app:layout_constraintHorizontal_bias="0.555"/>
    <TextView
            android:text="Forgot password?"
            android:layout_width="163dp"
            android:layout_height="19dp"
            android:id="@+id/LoginFPass"
            android:textColor="#1B2871"
            android:fontFamily="sans-serif-medium"
            android:linksClickable="true"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="226dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/LoginReg" app:layout_constraintHorizontal_bias="0.555"/>
    <TextView
            android:text="Register"
            android:layout_width="163dp"
            android:layout_height="19dp"
            android:id="@+id/LoginReg"
            android:textColor="#1B2871"
            android:fontFamily="sans-serif-medium"
            android:linksClickable="true"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="226dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="140dp" app:layout_constraintHorizontal_bias="0.666"/>
</androidx.constraintlayout.widget.ConstraintLayout>
