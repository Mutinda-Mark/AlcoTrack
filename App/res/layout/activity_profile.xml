<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        <TextView
                android:id="@+id/profileTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Details"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="28dp"/>

        <TextView
                android:id="@+id/profileFNameLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileTitleTxt"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp" />

        <EditText
                android:id="@+id/profileFNameTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                style="@style/EditTextBorder"
                android:paddingLeft="4dp"
                android:enabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileFNameLbl"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"/>

        <TextView
                android:id="@+id/profileLNameLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileFNameTxt"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp" />

        <EditText
                android:id="@+id/profileLNameTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                style="@style/EditTextBorder"
                android:paddingLeft="4dp"
                android:enabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileLNameLbl"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"/>

        <TextView
                android:id="@+id/profileEmailLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileLNameTxt"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp" />

        <EditText
                android:id="@+id/profileEmailTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                style="@style/EditTextBorder"
                android:paddingLeft="4dp"
                android:enabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileEmailLbl"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"/>

        <TextView
                android:id="@+id/profilePhoneLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileEmailTxt"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp" />

        <EditText
                android:id="@+id/profilePhoneTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                style="@style/EditTextBorder"
                android:paddingLeft="4dp"
                android:enabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profilePhoneLbl"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"/>

        <TextView
                android:id="@+id/profilePasswordLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profilePhoneTxt"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp" />

        <EditText
                android:id="@+id/profilePasswordTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                style="@style/EditTextBorder"
                android:paddingLeft="4dp"
                android:enabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profilePasswordLbl"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"/>

        <Button
                android:id="@+id/profileEditBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profilePasswordTxt"
                android:layout_marginTop="25dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/drawer_menu"
            app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>
